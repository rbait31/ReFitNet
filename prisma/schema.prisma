// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?   // Аватар пользователя (из Google OAuth)
  emailVerified DateTime? // Для верификации email
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Связи с данными приложения
  notes    Note[]
  mresults Mresult[]
  votes    Vote[]
  results  Result[]
  likes    Like[]

  // Связи для Auth.js
  accounts Account[]
  sessions Session[]

  @@map("users")
}

model Note {
  id        String   @id @default(uuid())
  ownerId   String
  title     String
  createdAt DateTime @default(now())

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model Category {
  id       String  @id @default(cuid())
  category String  @unique

  mresults Mresult[]

  @@map("categories")
}

model Mresult {
  id          String      @id @default(cuid())
  ownerId     String
  title       String
  content     String
  description String?
  categoryId  String?
  visibility  Visibility  @default(PRIVATE)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?

  owner    User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  votes    Vote[]
  tags     Tag[]

  @@index([ownerId, updatedAt])
  @@index([visibility, createdAt])
  @@map("mresults")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  mresults Mresult[]

  @@map("tags")
}

model Vote {
  id         String   @id @default(cuid())
  userId     String
  mresultId  String
  value      Int      @default(1)
  createdAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  mresult Mresult @relation(fields: [mresultId], references: [id], onDelete: Cascade)

  @@unique([userId, mresultId])
  @@index([mresultId])
  @@index([userId])
  @@map("votes")
}

enum Visibility {
  PRIVATE
  PUBLIC
}

// Таблицы для Auth.js
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Модель для результатов пользователя (личный кабинет)
model Result {
  id         String   @id @default(cuid())
  userId     String
  title      String
  content    String   @db.Text
  isPublic   Boolean  @default(false)
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes Like[]

  @@index([userId, updatedAt])
  @@index([isPublic, createdAt])
  @@index([userId, isFavorite])
  @@map("results")
}

// Модель для лайков публичных результатов
model Like {
  id        String   @id @default(cuid())
  userId    String
  resultId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  result Result @relation(fields: [resultId], references: [id], onDelete: Cascade)

  @@unique([userId, resultId])
  @@index([resultId])
  @@index([userId])
  @@map("likes")
}
